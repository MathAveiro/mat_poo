package aula02;
import java.util.Scanner;
public class A02E04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int valor, segundoV;
		System.out.print("Introduza um número: ");
		valor = sc.nextInt();
		double max=valor, min=valor, soma=0;
		int count = 0;
		do {
			System.out.print("Insira outro número: ");
			segundoV = sc.nextInt();
			if(segundoV < min) min = segundoV;
			if(segundoV > max) max = segundoV;
			count++;
			soma += segundoV;
		} while(segundoV != valor);
		double media = soma / count;
		System.out.println("O maior número lido foi " + max + 
				", o menor foi " + min + 
				", a média dos valores lidos foi " + media + 
				" e o número de elementos lidos foi " + count +
				". Os valores que deram forçaram a paragem foram " + valor + 
				" e " + segundoV + 
				".");
		sc.close();
	}
}